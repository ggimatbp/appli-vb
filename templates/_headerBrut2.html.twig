

{% if app.user.RoleId is defined %}

{% set parentTab = 0 %}
        <div class="d-flex flex-column header-vertical sticky-top fixed-top" onmousedown="return false" onselectstart="return false">
					{% for apAccess in app.user.RoleId.apAccesses %}
						{% if apAccess.view == true %}
							{% if apAccess.tab.apTab is null %}
                    <a title="{{apAccess.tab.name}}" class="my-3 btn-header1 nav-link text-center  
                        {% if app.request.attributes.get('_controller') matches "#" ~ apAccess.tab.ControlPath ~ "#" %}
                        {% set parentTab = apAccess.tab.id %}
                          header1
                        {% else %} 
                        headerNotActive
                        {% endif %}
                    active" aria-current="page" href="{{path (apAccess.tab.path)}}"><i class="{{apAccess.tab.icon}}"></i></a>
                {% endif %}
             {% endif %}
					{% endfor %}
            <div class="dropend my-3 ">
                <button title="Déconnexion" class="w-100 btn btn-header1 dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user"></i>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li class="ps-2">{{ app.user.firstname }}
						{{ app.user.lastname }}</li>
                <li><a class="dropdown-item text-danger fw-bolder" href="/logout">Déconnexion ⛔</a></li>
              </ul>
             </div>
        </div>

      {% endif %}
