
<div class="aprole-global-container">
    <h1 class="management-h1">Liste des employés</h1>
    <a class="btn-new btn-bottom btn-edit-role btn btn-ligth" href="{{ path('user_new') }}">Nouveau</a>
    <div class="aprole-global-container">
        <table class="table table-hover">
            <thead>
                <tr  id="employee-tr-order" >
                    <th class="title-table1">Id <button data-name="id" data-order=1><i class="fas fa-chevron-up"></i></i></button><button data-name="id" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Nom <button data-name="lastname" data-order=1><i class="fas fa-chevron-up"></i></i></button><button data-name="lastname" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Prénom <button data-name="firstname" data-order=1><i class="fas fa-chevron-up"></i></i></button><button data-name="firstname" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Email <button data-name="email" data-order=1><i class="fas fa-chevron-up"></i></i></button><button data-name="email" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Role <button data-name="role" data-order=1><i class="fas fa-chevron-up"></i></i></button><button data-name="role" data-order=0><i class="fas fa-chevron-down"></i></button> </th>

                    <th class="title-table1">Actif</th>

                    <th class="title-table1">Actions</th>

                </tr>
                {% include "manager/_filtreEmployee.html.twig" %}
            </thead>
            <tbody id="content-filtered">
                {% include "manager/_filtredEmployee.html.twig" %}
            </tbody>
            <tfoot id="pagination_filtered">
                {% include "manager/_paginationEmployee.html.twig" %}
            </tfoot>
        </table>

        {# total page display on a single page #}

        <div class="d-flex justify-content-between">
            <form method = "get" class="d-flex justify-content-around">

                <select class="form-select" aria-label="Default select example" name="pageLimitNumber" placeholder="nbr de pages">
                    <option  value="">Nbr de lignes</option>
                    <option  value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                </select>
                <input type="submit" value="go!">
            </form>
        </div>
    </div>       
</div>
