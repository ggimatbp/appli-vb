
<!-- Modal -->
<div class="modal  fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-fullscreen-edited">
		<div class="modal-content modal-content-design">
			<div class="modal-body modal-body-design">
   				<button type="button" class="btn-close modal-exit-edited" data-bs-dismiss="modal" aria-label="Close"></button>
				{#region carroussel #}
				<div id="bulkImageCarroussel" class="carousel carousel-dark slide" data-bs-ride="carousel" data-bs-interval="false">
					<div class="carousel-indicators">
						{% set loopCarrousselButton = 0 %}
						{% for bulk_image in files %}
							{% if bulk_image.fileType == "pdf" %}
								{% else %}
									<button type="button" data-bs-target="#bulkImageCarroussel" data-bs-slide-to="{{loopCarrousselButton}}" class="{{loopCarrousselButton == 0 ? 'active' : ''}}" aria-current="{{loopCarrousselButton == 0 ? 'true' : ''}}" aria-label="{{'Slide ' ~ loopCarrousselButton}}"></button>
									{% set loopCarrousselButton = loopCarrousselButton + 1 %}
							{% endif %}
						{% endfor %}
					</div>
					{% set loopCarroussel = 0 %}
					<div class="carousel-inner">
						{% for bulk_image in files %}
							{% set loopCarroussel = loopCarroussel + 1 %}

							<div id="{{'active' ~ bulk_image.id}}" class="carousel-item" data-img-id='{{bulk_image.id}}'>
								<a class="modal-fullscreen-link" href="{{ path('catalog_vb_bulk_image_show', {'id':bulk_image.id}) }}">
									<i class="fas fa-expand"></i>
								</a>
								{# <div class="modal-header modal-header-design"> #}
								<h5 class="modal-title modal-title-picture" id="exampleModalLabel">{{ bulk_image.name }}</h5>

								<img
								src="{{ vich_uploader_asset(bulk_image, 'imageFile') }}" class="image-modal-design d-block w-100" alt="...">
							{# <div class="carousel-caption d-none d-md-block">
							                                    <h5>First slide label</h5>
							                                    <p>Some representative placeholder content for the first slide.</p>
							                                    </div> #}

							</div>
						{% endfor %}
						<button class="carousel-control-prev" type="button" data-bs-target="#bulkImageCarroussel" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Précédent</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#bulkImageCarroussel" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Suivant</span>
						</button>
					</div>

					{# endregion #}
				</div>
			</div>
		</div>
	</div>
</div>

