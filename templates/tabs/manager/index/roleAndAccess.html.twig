{% block tabcontent %}
<div class="aprole-global-container">
    <h1 class="management-h1">Manager les rôles</h1>

    {% for ap_access in app.user.RoleId.apAccesses %}
        {% if ap_access.tab.name is same as(tabNameRole) and ap_access.add is same as(true) %}
            <a href="{{ path('ap_role_new') }}" class="btn-create btn-new btn-bottom btn btn-ligth">Ajouter un rôle</a>
        {% endif %}
    {% endfor %}

    <div class="aprole-global-container array-scroll">
        <table class="table table-hover table-striped array-design array-role-sizer">
            <thead>
                <tr id = "role-tr-order">
                    <th class="title-table1">Nom <button class="btn-orderby-overlook" data-namerole = "name" data-orderrole = 1><i class = "fas fa-chevron-up"></i></i></button><button class="btn-orderby-overlook" data-namerole="name" data-orderrole = 0><i class="fas fa-chevron-down"></i></button></th>
                    <th></th>
                </tr>
                {% include "tabs/manager/index/_filterRoleAndAccess.html.twig" %}
            </thead>
            <tbody id="content-role-filtered">
                {% include "tabs/manager/index/_filteredRoleAndAccess.html.twig" %}
            </tbody>
            <tfoot id="pagination-role-filtered">
                {% include "tabs/manager/index/_paginationRoleAndAccess.html.twig" %}
            </tfoot>
        </table>
    </div>
</div> 
{% endblock %}