

<div class="aprole-global-container">
    <h1 class="management-h1">Liste des employés</h1>
  
     {% for ap_access in app.user.RoleId.apAccesses %}
        {% if ap_access.tab.name is same as(tabNameEmployee) and ap_access.add is same as(true) %}
            <a class="btn-new btn-bottom btn btn-ligth" href="{{ path('user_new') }}">Ajouter un employé</a>
        {% endif %}  
    {% endfor %} 
    <div class="aprole-global-container array-scroll">
        <table class="table table-hover array-employee-sizer">
            <thead>
                <tr  id="employee-tr-order" >
                    <th class="title-table1">Id</span> <button class="btn-orderby-overlook" data-name="id" data-order=1><i class="fas fa-chevron-up"></i></i></button><button class="btn-orderby-overlook" data-name="id" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Nom <button class="btn-orderby-overlook" data-name="lastname" data-order=1><i class="fas fa-chevron-up"></i></i></button><button class="btn-orderby-overlook" data-name="lastname" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Prénom <button class="btn-orderby-overlook" data-name="firstname" data-order=1><i class="fas fa-chevron-up"></i></i></button><button class="btn-orderby-overlook" data-name="firstname" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Email <button class="btn-orderby-overlook" data-name="email" data-order=1><i class="fas fa-chevron-up"></i></i></button><button class="btn-orderby-overlook" data-name="email" data-order = 0><i class="fas fa-chevron-down"></i></button></th>

                    <th class="title-table1">Role <button class="btn-orderby-overlook" data-name="role" data-order=1><i class="fas fa-chevron-up"></i></i></button><button class="btn-orderby-overlook" data-name="role" data-order=0><i class="fas fa-chevron-down"></i></button> </th>

                    <th class="title-table1">Actif</th>

                    <th class="title-table1">Actions</th>

                </tr>
                {% include "/tabs/manager/index/_filtreEmployee.html.twig" %}
            </thead>
            <tbody id="content-filtered">
                {% include "tabs/manager/index/_filtredEmployee.html.twig" %}
            </tbody>
            <tfoot id="pagination_filtered">
                {% include "tabs/manager/index/_paginationEmployee.html.twig" %}
            </tfoot>
        </table>
    </div>       
</div>
