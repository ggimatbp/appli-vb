{% for user in users %}
        <tr>   
            <td>{{ user.id }}
            <td>{{ user.lastname }}</td>
            <td>{{ user.firstname }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.roleId ? user.roleId.name : '' }}</td>
            <td>{{ user.active ? 'Oui' : 'Non' }}</td>
            <td>
            <div class="btn-group dropstart">
                <button class="btn btn-edit dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    Actions
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="{{ path('user_show', {'id': user.id}) }}">Voir</a></li>
                    {% for ap_access in app.user.RoleId.apAccesses %}
                        {% if ap_access.tab.name is same as(tabNameEmployee) and ap_access.edit is same as(true) %}
                            <li><a class="dropdown-item" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a></li>
                        {% endif %}  
                    {% endfor %} 
                </ul>
            </div>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="8">Aucun r√©sultat</td>
        </tr>
{% endfor %}

