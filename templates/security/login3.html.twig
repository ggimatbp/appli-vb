{% extends 'base_login.html.twig' %}
{% block title %}Login{% endblock %}
{% block javascripts %}
{% endblock %}
{% block navbar %}
{% endblock %}
{% block tab %}
{% endblock %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {# VERSION DU 06.05.22 #}
    <div class="h-100 d-flex justify-content-center align-item-center">

        <form method="post" class="d-flex align-item-center">
        <div class="white-box-login" >
            <h3 class="align-self-center text-center">Connexion</h1>
            <div class="">
                <label class="m-2" for="inputEmail">Mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input-phone form-control" autocomplete="email" required autofocus>
                <label class="m-2" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <input type="hidden" name="_target_path" value="/catalog/"/>
                <div class="d-flex justify-content-center">
                <button class="w-100 mt-5 btn btn-ligth btn-lambda" type="submit">
                    Se connecter
                </button>
                </div>

            {% if app.user %}
                <div class="mt-5 d-flex justify-content-center mb-3">
                    Vous êtes connécté sur le profil de {{ app.user.firstname }} {{app.user.lastname}}. <a href="{{ path('app_logout') }}">&nbsp;Déconnexion?</a>
                </div>
            {% endif %}
            </div>
        </form>
        </div>
    </div>
 {% endblock %}
 
