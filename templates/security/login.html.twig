{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block javascripts %}
{% endblock %}
{% block navbar %}
{% endblock %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="modal-dialog modal-dialog-centered modal-xs d-flex justify-content-around">
        <div class="modal-content">
        <form method="post" class="d-flex flex-column justify-content-center my-5">
        {# <div class="white-box-login"> #}
            <h3 class="align-self-center">Connexion</h1>
            <div class="w-75 align-self-center">
                <label class="m-2" for="inputEmail">Mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label class="m-2" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <input type="hidden" name="_target_path" value="/catalog/"/>
                <div class="d-flex justify-content-center">
                <button class="w-100 mt-5 btn btn-ligth" type="submit">
                    Se connecter
                </button>
                </div>

            {% if app.user %}
                <div class="mt-5 d-flex justify-content-center mb-3">
                    Vous êtes connécté sur le profil de {{ app.user.firstname }} {{app.user.lastname}}. <a href="{{ path('app_logout') }}">&nbsp;Déconnexion?</a>
                </div>
            {% endif %}
            </div>
        </form>
        {# </div> #}
    </div>
    </div>
 {% endblock %}
 
