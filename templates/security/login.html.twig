{% extends 'base.html.twig' %}
{% block title %}Login{% endblock %}
{% block javascripts %}
{% endblock %}
{% block navbar %}
{% endblock %}
{% block body %}
<div class="h-100">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <form method="post" class="login-form-with-title h-100 ">

    <div class="login-form-co" >
        <h1 class="align-self-center text-center">Connexion</h1>
        <div class="">

            <label class="m-2" for="inputEmail">Mail</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input-phone form-control" autocomplete="email" required autofocus>
            <label class="m-2" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="d-flex justify-content-center">
            <button class=" mt-5 btn btn-ligth" type="submit">
                Se connecter
            </button>
            </div>

        {% if app.user %}
            <div class="mt-5 d-flex justify-content-center mb-3">
                Vous êtes connécté sur le profil de {{ app.user.firstname }} {{app.user.lastname}}. <a href="{{ path('app_logout') }}">&nbsp;Déconnexion?</a>
            </div>
        {% endif %}
        </div>
    </form>
    </div>
</div>
 {% endblock %}
 
